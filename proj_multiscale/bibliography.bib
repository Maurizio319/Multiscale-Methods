  langid = {english},
  keywords = {Computational biophysics,Structure of solids and liquids},
  file = {/home/maurizio/Zotero/storage/QTV68DM6/Kadam et al. - 2023 - Predicting scale-dependent chromatin polymer prope.pdf}
