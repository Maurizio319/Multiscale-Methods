@article{inoueSystematicComparisonReveals2017,
  title = {A Systematic Comparison Reveals Substantial Differences in Chromosomal versus Episomal Encoding of Enhancer Activity},
  author = {Inoue, Fumitaka and Kircher, Martin and Martin, Beth and Cooper, Gregory M. and Witten, Daniela M. and McManus, Michael T. and Ahituv, Nadav and Shendure, Jay},
