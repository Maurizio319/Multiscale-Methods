@article{rasmussenLossTET2Hematopoietic2015,
  title = {Loss of {{TET2}} in Hematopoietic Cells Leads to {{DNA}} Hypermethylation of Active Enhancers and Induction of Leukemogenesis},
  author = {Rasmussen, Kasper D. and Jia, Guangshuai and Johansen, Jens V. and Pedersen, Marianne T. and Rapin, Nicolas and Bagger, Frederik O. and Porse, Bo T. and Bernard, Olivier A. and Christensen, Jesper and Helin, Kristian},
  year = {2015},
