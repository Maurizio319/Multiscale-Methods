  pmid = {37995656},
  keywords = {3D genome organization,Animals,B-Lymphocytes,CCCTC-Binding Factor,Chromatin,Chromatin Assembly and Disassembly,enhancer loops,Genome,Hi-C,HiChIP,Humans,Ig locus contraction,IKAROS,inter-compartmental loops,lineage-specific genome organization,lymphocyte development,Mice,superTADs},
  file = {/home/maurizio/Zotero/storage/CJTIIVY4/Hu et al_2023_Lineage-specific 3D genome organization is assembled at multiple scales by.pdf}
}

@article{hussainEstablishmentCharacterizationLymphoblastoid2012,
  title = {Establishment \& Characterization of Lymphoblastoid Cell Lines from Patients with Multiple Primary Neoplasms in the Upper Aero-Digestive Tract \& Healthy Individuals},
  author = {Hussain, Tabish and Kotnis, Ashwin and Sarin, Rajiv and Mulherkar, Rita},
  year = {2012},
  month = jun,
  journal = {The Indian journal of medical research},
  volume = {135},
  pages = {820--9},
  abstract = {A major drawback for genetic studies as well as long-term genotype-phenotype correlation studies in cancer is lack of representative human cell lines providing a continuous source of basic biomolecules and a system to carry out various experimental investigations. This can be overcome to some extent by establishing lymphoblastoid cell lines (LCLs) by infecting peripheral blood lymphocytes with Epstein Barr virus (EBV) which is known to immortalize human resting B cells in vitro giving rise to actively proliferating B-lymphoblastoid cell lines. The present study involves preparation and characterization of LCLs generated from patients with multiple primary neoplasms (MPN) of upper aero-digestive tract (UADT). Thirty seven LCLs were established from UADT MPN patients and healthy age, sex and habit matched controls using EBV crude stock. Characterization was done with respect to expression of CD-19 (Pan B-cell marker), CD3 (T cell specific marker), CD56 (NK-cell specific marker), cell morphology, ploidy analysis, genotype and gene expression comparison with the parent lymphocytes. LCLs showed rosette morphology with doubling time of approximately 24 h. Ploidy analysis showed diploid DNA content which was maintained for at least 30 population doublings. When compared with parent lymphocytes there appeared no change at genetic and gene expression level. Our results show that lymphoblastoid cell lines are a good surrogate of isolated lymphocytes bearing their close resemblance at genetic and phenotypic level to parent lymphocytes and are a valuable resource for understanding genotype-phenotype interactions.},
  file = {/home/maurizio/Zotero/storage/J6QU7UX3/Hussain et al_2012_Establishment & characterization of lymphoblastoid cell lines from patients.pdf}
}

