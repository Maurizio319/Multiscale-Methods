@article{armaosPENGUINApproachReconstruct2023,
  title = {The {{PENGUIN}} Approach to Reconstruct Protein Interactions at Enhancer-Promoter Regions and Its Application to Prostate Cancer},
  author = {Armaos, Alexandros and Serra, Fran{\c c}ois and {N{\'u}{\~n}ez-Carpintero}, Iker and Seo, Ji-Heui and Baca, Sylvan C. and Gustincich, Stefano and Valencia, Alfonso and Freedman, Matthew L. and Cirillo, Davide and Giambartolomei, Claudia and Tartaglia, Gian Gaetano},
  year = {2023},
